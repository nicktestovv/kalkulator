#include "stdafx.h"
#include<iostream>

using namespace std;
int main()
{
	setlocale(LC_ALL, "RUSSIAN");

	int a, b, c, i, j;
	a = 0;
	char gr, p;

	cout << "Введите вашу группу крови." << endl;
	cout << "Если у Вас 1-ая группа, введите \"O\" латинскую" << endl;
	cout << "Если у Вас 2-ая группа, введите \"A\" латинскую" << endl;
	cout << "Если у Вас 3-я группа, введите \"B\" латинскую" << endl;
	cout << "Если у Вас 4-ая группа, введите \"AB\" латинские" << endl;

	cin >> gr;

	cout << "У Вас положительная или отрицательная группа крови?" << endl;
	cout << "Если Вас положительная группа крови, введите \"+\" " << endl;
	cout << "Если Вас отрицательная группа крови, введите \"-\" " << endl;

	cin >> p;

	switch (gr)
	{
	case 'O':
		a = 1;
		break;
	case 'A':
		a = 2;
		break;
	case 'B':
		a = 3;
		break;
	case 'AB':
		a = 4;
		break;
	default:
		cout << "Проверьте ввод данных" << endl;
		break;
	}

	switch (p)
	{
	case'+':
		b = 1;
		break;
	case'-':
		b = 2;
		break;
	default:
		cout << "Проверьте ввод данных" << endl;
		break;
	}

	if ((a = 1) && (b = 1)) {
		cout << "Вам подойдут как 1-ая положительная, так и 1-ая отрицательная";
	}

	else if ((a = 1) && (b = 2)) {
		cout << "Вам подойдёт 1-ая отрицательная";
	}

	else if ((a = 2) && (b = 2)) {
		cout << "Вам подойдёт 1-ая отрицательная и 2-ая отрицательная";
	}

	else if ((a = 2) && (b = 1)) {
		cout << "Вам подойдут: ";
		cout << "1-ая отрицательная и положительная;";
		cout << "2-ая отрицательная и положительная;";
	}

	else if ((a = 3) && (b = 2)) {
		cout << "Вам подойдёт 1-ая отрицательная и 3-я отрицательная";
	}

	else if ((a = 3) && (b = 1)) {
		cout << "Вам подойдут: ";
		cout << "1-ая отрицательная и положительная;";
		cout << "3-я отрицательная и положительная;";
	}

	else if ((a = 4) && (b = 2)) {
		cout << "Вам подойдут: ";
		cout << "1-ая отрицательная;";
		cout << "2-ая отрицательная;";
		cout << "3-я отрицательная;";
		cout << "4-ая отрицательная;";
	}

	else if ((a = 4) && (b = 1)) {
		cout << "Вам подойдёт любая другая группа крови ";
	}

/*	for (i = 1; i <= 4; i++) {
		for (j = 1; j <= 2; j++) {
			if ((i==a)&&(j==b))
			{

			}
		}
	}
*/
	system("pause");
	return 0;
}
